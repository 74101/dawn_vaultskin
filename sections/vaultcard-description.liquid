<div class="page-width">

{% for block in section.blocks %}
  {% case block.type %}
    {% when "text" %}
      {{ block.settings.text }}
    {% when "two_column" %}
      <div class="two_column">
        <div class="column">
          {{ block.settings.column_1 }}
          {{ block.settings.image_1 }}
        </div>
        <div class="column">
          {{ block.settings.column_2 }}
          {{ block.settings.image_2 }}
        </div>
      </div>
  {% endcase %}
{% endfor %}

</div>

{% schema %}
{
  "name": "Vaultcard description",
  "tag": "section",
  "class": "vc_description tab_content",
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "two_column",
      "name": "Two-column",
      "settings": [
        {
          "type": "richtext",
          "id": "column_1",
          "label": "First column"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "First column image"
        },
        {
          "type": "richtext",
          "id": "column_2",
          "label": "Second column"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Second column image"
        }
      ]
    }
  ]
}
{% endschema %}