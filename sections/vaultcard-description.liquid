<div class="page-width">

{% for block in section.blocks %}
  {% case block.type %}
    {% when "text" %}
      {% if block.settings.text %}
        {{ block.settings.text }}
      {% endif %}
    {% when "two_column" %}
      <div class="two_column">
        <div class="column">
          {% if block.settings.column_1 %}
            {{ block.settings.column_1 }}
          {% endif %}
          {% if block.settings.image_1 %}
            {{ block.settings.image_1 }}
          {% endif %}
        </div>
        <div class="column">
          {% if block.settings.column_2 %}
            {{ block.settings.column_2 }}
          {% endif %}
          {% if block.settings.image_2 %}
            {{ block.settings.image_2 }}
          {% endif %}
        </div>
      </div>
    {% when "table_row" %}
      
  {% endcase %}
{% endfor %}

</div>

{% schema %}
{
  "name": "Vaultcard description",
  "tag": "section",
  "class": "vc_description tab_content",
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "two_column",
      "name": "Two-column",
      "settings": [
        {
          "type": "richtext",
          "id": "column_1",
          "label": "First column"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "First column image"
        },
        {
          "type": "richtext",
          "id": "column_2",
          "label": "Second column"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Second column image"
        }
      ]
    },
    {
      "type": "table_row",
      "name": "Table row",
      "settings": [
        {
          "type": "select",
          "id": "row_type",
          "options": [
            {
              "value": "default",
              "label": "Default"
            },
            {
              "value": "header",
              "label": "Header"
            }
          ],
          "default": "default",
          "label": "Type"
        },
        {
          "type": "richtext",
          "id": "cell_1",
          "label": "小ell 1"
        },
        {
          "type": "richtext",
          "id": "cell_2",
          "label": "小ell 2"
        },
        {
          "type": "richtext",
          "id": "cell_3",
          "label": "小ell 3"
        },
        {
          "type": "richtext",
          "id": "cell_4",
          "label": "小ell 4"
        }
      ]
    }
  ]
}
{% endschema %}