<div class="page-width">

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'text' %}
      <div class="vc_descr_block {% case block.settings.alignment %}{% when 'center' %}alignment_center{% when 'right' %}alignment_right{% endcase %}" {{ block.shopify_attributes }}>
        {% if block.settings.text %}
          {{ block.settings.text }}
        {% endif %}
        {% if block.settings.image %}
          {{ block.settings.image | image_url: width: 1100 | image_tag }}
        {% endif %}
      </div>
    {% when 'two_column' %}
      <div class="vc_descr_block two_column {% case block.settings.alignment %}{% when 'center' %}alignment_center{% when 'right' %}alignment_right{% endcase %}" {{ block.shopify_attributes }}>
        <div class="column">
          {% if block.settings.column_1 %}
            {{ block.settings.column_1 }}
          {% endif %}
          {% if block.settings.image_1 %}
            {{ block.settings.image_1 | image_url: width: 520 | image_tag }}
          {% endif %}
        </div>
        <div class="column">
          {% if block.settings.column_2 %}
            {{ block.settings.column_2 }}
          {% endif %}
          {% if block.settings.image_2 %}
            {{ block.settings.image_2 | image_url: width: 520 | image_tag }}
          {% endif %}
        </div>
      </div>
    {% when 'table_row' %}
      <div class=" table_row {% case block.settings.row_type %}{% when 'header' %}table_row_header table_row_header-{{- block.id }} {% when 'default' %}table_row_body{% endcase %}" {{ block.shopify_attributes }}>
        <div class="table_cell table_cell_1 {% case block.settings.alignment %}{% when 'center' %}alignment_center{% when 'right' %}alignment_right{% endcase %}">
          {{ block.settings.cell_1 }}
        </div>
        <div class="table_cell table_cell_2 {% case block.settings.alignment %}{% when 'center' %}alignment_center{% when 'right' %}alignment_right{% endcase %}">
          {{ block.settings.cell_2 }}
        </div>
        <div class="table_cell table_cell_3 {% case block.settings.alignment %}{% when 'center' %}alignment_center{% when 'right' %}alignment_right{% endcase %}">
          {{ block.settings.cell_3 }}
        </div>
        <div class="table_cell table_cell_4 {% case block.settings.alignment %}{% when 'center' %}alignment_center{% when 'right' %}alignment_right{% endcase %}">
          {{ block.settings.cell_4 }}
        </div>
      </div>
  {% endcase %}
{% endfor %}

</div>

