<div class="page-width">
  <div class="breadcrumbs">
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
      /
      <li>{{ product.title }}</li>
    </ul>
  </div>
  <div class="product_tabs">
    <ul>
      <li>
        <a href="#to_top" class="scroll_link">Home</a>
      </li>
      <li>
        <a href="#main-product" class="scroll_link">Features</a>
      </li>
      <li>
        <a href="#variant_product_features" class="scroll_link">Get Inspired</a>
      </li>
    </ul>
  </div>
  <div class="view_options">
    <a href="#main-product">
      <div>
        View Options
        {{ product.price | money }}
      </div>
      {% if product.compare_at_price %}
        <div class="price_old">
          was
          <s>
            {{ product.compare_at_price | money_with_currency }}
          </s>
        </div>
      {% endif %}
    </a>
  </div>
</div>
{% schema %}
  {
    "name": "Product navigation",
    "tag": "section",
    "class": "product_navigation",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": []
  }
{% endschema %}