{% for block in section.blocks %}
  <div class="vc_feature vc_feature--type-{{- block.settings.type }}" {{ block.shopify_attributes }}>
    <h2 class="vc_feature__title">{{ block.settings.title }}</h2>
    <div class="vc_feature__text">{{ block.settings.text }}</div>
    <div class="vc_feature__image">{{ block.settings.image }}</div>
  </div>
{% endfor %}

{% schema %}
{
  "name": "Vaultcard features",
  "tag": "section",
  "class": "vc_features",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "type",
          "label": "Type",
          "options": [
            {
              "value": "1",
              "label": "Type 1"
            },
            {
              "value": "2",
              "label": "Type 2"
            }
          ],
          "default": "1"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text content"
        },
        {
          "type": "image_picker",
          "id": "image_main",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}